<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="EditTextLoginStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/login_edit_text_background</item>
    </style>

    <style name="ImageViewLoginStyle">
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginBottom">150dp</item>
        <item name="android:src">@drawable/ic_local_dining_black_96dp</item>
        <item name="android:contentDescription">@string/logo_description</item>
    </style>

    <style name="ButtonLoginStyle">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="CardViewProfileStyle">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardElevation">5dp</item>
    </style>

    <style name="TextViewLabelStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewHeaderLabelStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewDescriptionStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ImageViewHeaderProfileStyle">
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ImageViewProfileStyle">
        <item name="android:layout_marginTop">75dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/circle_shape</item>
    </style>

    <style name="TextViewNameProfileStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="ActionButtonProfileStyle">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="srcCompat">@android:drawable/ic_menu_edit</item>
    </style>

    <style name="EditTextSingleInput">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ParagraphEditText">
        <item name="android:lines">6</item>
        <item name="android:maxLines">6</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">top|start</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="ProfileImageStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>


    <style name="SmallCircleStyle">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewProfile">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="ButtonActionStyle">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/action_state_button</item>
    </style>

    <style name="SplitLayoutStyle">
        <item name="android:weightSum">2</item>
        <item name="android:layout_marginBottom">30dp</item>
    </style>

    <style name="LargeTextViewLabelStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <!--<item name="android:visibility">invisible</item>-->
    </style>


</resources>
